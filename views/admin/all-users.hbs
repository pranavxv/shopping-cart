<section>
    <div class="container">
        <table class="table mt-4">
            <thead>
                {{#if allUsers}}
                <tr>
                    
                    <th>Users Name</th>
                    <th>Email ID</th>
                    <th>Order</th>
                    {{!-- <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>Status</th> --}}
                </tr>
                {{else}}
                <div class="text-center">
                <h3>No Users</h3>
                 <a href="/" class="btn btn-primary">Go To Home</a>
                 </div>
                {{/if}}

            </thead>
            <tbody>
            {{#each allUsers}}
                <tr>
                    {{!-- <td>{{this.date}}</td> --}}
                    <td>{{this.Name}}</td>
                    <td>{{this.Email}}</td>
                    {{!-- <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td> --}}

                    <td>
                        <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Order</a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</section>