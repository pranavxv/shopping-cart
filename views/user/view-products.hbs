
    <section>
        <div class="container mt-4">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 13rem; height: 23rem;">
                        <img src="/product-images/{{this._id}}.jpg"
                            class="card-img-top" alt="..." 
                            style="height: 11rem; width: 13rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">Rs.{{this.Price}}</p>
                            <p class="card-text">{{this.Description}}</p>
                            <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add To Cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
                
                 
            </div>
        </div>
    </section>
   
